
<h1><%= @list.name  %></h1>
<div class="position-relative pb-5 mb-5">
<div class= "cards">
<% @list.bookmarks.each do |bookmark| %>
<div class="card-trip">
 <%= image_tag bookmark.movie.poster_url, alt: "Le Wagon" %>
  <div class="card-trip-infos">
    <div>
      <h2><%= bookmark.movie.title %></h2>
      <p><%= bookmark.movie.overview %></p>
    </div>
    <h2 class="card-trip-pricing"><%= bookmark.movie.rating %></h2>
    <%= link_to "Delete",
  bookmark_path(bookmark),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
  </div>
  </div>
  <% end %>
</div>
<%= link_to("Add movie", new_list_bookmark_path(@list), class: "btn btn-primary position-absolute bottom-0 end-0") %>
</div>
