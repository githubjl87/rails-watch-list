
<h1 class="text-center m-5"><%= @list.name  %></h1>
<div class="position-relative pb-5 mb-5 container ">
<div class= "cards row">
<% @list.bookmarks.each do |bookmark| %>
<div class="card-trip position-relative">
 <%= image_tag bookmark.movie.poster_url, alt: "Le Wagon" %>
  <div class="card-trip-infos mt-3 col-4 ">
    <div>
      <h2><%= bookmark.movie.title %></h2>
      <p><%= bookmark.movie.overview %></p>
    </div>
    <h2 class="card-trip-pricing"><%= bookmark.movie.rating %></h2>
  </div>
  <%= link_to "❌",
  bookmark_path(bookmark),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "movie-delete-btn position-absolute top-0 end-0"%>
  </div>
  <% end %>
</div>

<h1 class="mt-5">Add a movie to the list</h1>
<%= simple_form_for [@list, @bookmark] do |f| %>

  <!-- [...] -->
  <%= f.input :comment %>
    <%= f.association :movie %>

  <%= f.submit class: 'btn btn-primary position-absolute bottom-0 end-0' %>

<% end %>
  <%= link_to("<- Go Back", lists_path, class: 'btn btn-outline-dark position-absolute bottom-0 start-0') %>

<%#= link_to("Add movie", new_list_bookmark_path(@list)) %>
</div>
