
<H1 class="text-center m-5 ">🎞️ My Movie Lists 🎥</H1>

<div class="cards">
 <% @lists.each do |list| %>
    <% if list.photo.attached?  %>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path(list.photo.key,
      width: 400, height: 300, crop: :fill) %>)">
    <%= link_to list.name, list_path(list) %>
   <%= link_to "✖",
  list_path(list),
  class: "delete-btn",
  data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>

    <% else %>
        <%= link_to list.name, list_path(list) %>
           <%= link_to "Delete",
  list_path(list),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
        <% end %>
  </div>
 <% end %>
</div>
